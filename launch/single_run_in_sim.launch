<launch>
  <arg name="namespace" default="agent0"/>
  <arg name="odom_topic" default="/visual_slam/odom"/>
  <arg name="map_size_x" default="40.0"/>
  <arg name="map_size_y" default="20.0"/>
  <arg name="map_size_z" default="5.0"/>

  <!-- rviz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find map_generator)/config/default.rviz" required="true"/>  
  
  <!-- use simulator -->
    <!-- pid controller -->
  <include file="$(find map_generator)/launch/simulator.xml">
    <arg name="odometry_topic" value="$(arg odom_topic)"/>
    <arg name="map_size_x_" value="$(arg map_size_x)"/>
    <arg name="map_size_y_" value="$(arg map_size_y)"/>
    <arg name="map_size_z_" value="$(arg map_size_z)"/>
  </include>
    <!-- mpc controller -->

</launch>
